<header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('_welcome') }}">Glit</a>

            <div class="nav-collapse">
                <ul class="nav">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li{% block nav_class_active_home %}{% endblock %}><a
                            href="{{ path('_welcome') }}">{% trans %}Home{% endtrans %}</a></li>
                    <li{% block nav_class_active_projects %}{% endblock %}><a
                            href="{{ path('glit_projects_default_index') }}">{% trans %}Projects{% endtrans %}</a></li>
                    <li{% block nav_class_active_tasks %}{% endblock %}><a
                            href="#contact">{% trans %}Task{% endtrans %}</a></li>
                    <li{% block nav_class_active_documents %}{% endblock %}><a
                            href="#contact">{% trans %}Documents{% endtrans %}</a></li>
                    <li{% block nav_class_active_teams %}{% endblock %}><a
                            href="#contact">{% trans %}Teams{% endtrans %}</a></li>
                    <li{% block nav_class_active_admin %}{% endblock %}><a
                            href="{{ path('glit_admin_default_index') }}">{% trans %}Admin{% endtrans %}</a></li>
                    {% endif %}
                </ul>

                <ul class="nav pull-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="dropdown">
                        <a href="#" class="navbar-user dropdown-toggle" data-toggle="dropdown">{{ app.user }}<b
                                class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('glit_core_account_view', {'uniqueName':app.user}) }}">{% trans %}My
                                Profile{% endtrans %}</a></li>
                            <li><a href="{{ path('_security_logout') }}">{% trans %}Logout{% endtrans %}</a></li>
                        </ul>
                    </li>
                    {% endif %}
                </ul>

                <form class="navbar-search pull-right">
                    <input type="search" class="search-query" placeholder="{% trans %}Search{% endtrans %}"/>
                </form>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</header>