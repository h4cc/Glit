{% extends 'GlitUserBundle:Default:layout.html.twig' %}
{% form_theme form ':Form:form_horizontal_layout.html.twig' %}

{% block class_active_emails %}class="active"{% endblock %}

{% block layout_content %}
<div class="page-header">
    <h1>
        {% trans %}Emails{% endtrans %}
    </h1>
</div>
<div class="row-fluid">
    {% if item.id > 0 %}
    <form action="{{ path('glit_user_emails_edit', {'id': item.id}) }}" method="post" class="form-horizontal">
        {% else %}
        <form action="{{ path('glit_user_emails_new') }}" method="post" class="form-horizontal">
            {% endif %}
            {{ form_widget(form._token) }}

            <fieldset>
                {% if item.id > 0 %}
                <legend>Edit Email</legend>
                {% else %}
                <legend>New Email</legend>
                {% endif %}
                {{ form_errors(form) }}

                {{ form_rest(form) }}

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
                    <a href="{{ path('glit_user_emails_view') }}" class="btn">{% trans %}Cancel{% endtrans %}</a>
                </div>
            </fieldset>
        </form>
</div>
        {% endblock %}