{% extends '::base.html.twig' %}

{% block content %}
<div class="row-fluid">
    <div class="span3">
        <div class="well sidebar-nav">
            <ul class="nav nav-list">
                <li class="nav-header">{{ app.user }}</li>
                <li {% block class_active_profile %}{% endblock %}>
                    <a href="{{ path('glit_core_account_view', {'uniqueName':app.user}) }}">Mon Profil</a>
                </li>
                <li {% block class_active_infos %}{% endblock %}>
                    <a href="{{ path('glit_user_default_edit') }}">Mes Informations</a>
                </li>
                <li>
                    <a href="{{ path('glit_user_default_ssh') }}"{% block class_active_ssh %}{% endblock %}>Mes Clef SSH</a>
                </li>
                <li>
                    <a href="{{ path('glit_user_default_organizations') }}"{% block class_active_orga %}{% endblock %}>Organisations</a>
                </li>
                <li>
                    <a href="{{ path('glit_user_default_notifications') }}"{% block class_active_notif %}{% endblock %}>Notifications</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="span9">
        {% block layout_content %}{% endblock %}
    </div>

</div>
{% endblock %}