{% extends 'GlitUserBundle:Default:layout.html.twig' %}

{% block class_active_ssh %}class="active"{% endblock %}

{% block layout_content %}
<div class="page-header">
    <div class="actions">
        <a href="{{ path('glit_user_default_sshnew') }}" class="btn">{% trans%}Add{% endtrans %}</a>
    </div>
    <h1>
        {% trans %}SSH Keys{% endtrans %}
    </h1>
</div>
<div class="row-fluid">
    {% if keys|length > 0 %}
    <table class="table table-striped borders">
        <tbody>
        {% for key in keys %}
        <tr>
            <td>
                <a href="{{ path('glit_user_default_sshedit', {'keyId': key.id}) }}"><strong>{{ key.title }}</strong></a>
            </td>
            <td><p class="small pull-right">{{ key.updatedAt|relativeDate }}</p></td>
            <td><a href="{{ path('glit_user_default_sshdelete', {'keyId': key.id}) }}"
                   class="btn btn-danger pull-right">{% trans %}Delete{% endtrans %}</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>{% trans %}You have any ssh key configured.{% endtrans %}</p>
    {% endif %}
</div>
        {% endblock %}